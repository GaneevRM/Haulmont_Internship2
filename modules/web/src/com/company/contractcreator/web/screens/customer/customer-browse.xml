<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="customersTable"
        messagesPack="com.company.contractcreator.web.screens.customer">
    <data readOnly="true">
        <collection id="customersDc"
                    class="com.company.contractcreator.entity.Customer"
                    view="_local">
            <loader id="customersDl">
                <query>
                    <![CDATA[select e from contractcreator_Customer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="customersTable"
            spacing="true">
        <filter id="filter"
                applyTo="customersTable"
                dataLoader="customersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="customersTable"
                    width="100%"
                    dataContainer="customersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="fio" caption="&#1060;&#1048;&#1054;"/>
                <column id="phone" caption="&#1058;&#1077;&#1083;&#1077;&#1092;&#1086;&#1085;"/>
                <column id="email"/>
                <column id="address" caption="&#1040;&#1076;&#1088;&#1077;&#1089;"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="customersTable.create"
                        caption="&#1044;&#1086;&#1073;&#1072;&#1074;&#1080;&#1090;&#1100;"/>
                <button id="editBtn" action="customersTable.edit"
                        caption="&#1056;&#1077;&#1076;&#1072;&#1082;&#1090;&#1080;&#1088;&#1086;&#1074;&#1072;&#1090;&#1100;"/>
                <button id="removeBtn" action="customersTable.remove"
                        caption="&#1059;&#1076;&#1072;&#1083;&#1080;&#1090;&#1100;"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
